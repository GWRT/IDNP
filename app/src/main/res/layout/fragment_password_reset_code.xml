<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordResetCodeFragment"
    android:orientation="vertical"
    >

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce el código de 6 dígitos"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu código se envió a example@gmail.com"
        android:textSize="16dp"
        android:layout_marginVertical="15dp"
        />
    <EditText
        android:id="@+id/forgotPassword_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="@string/correo"
        android:inputType="textEmailAddress"
        android:background="@drawable/custom_input"
        android:padding="12dp"
        android:layout_marginVertical="@dimen/marginBottomEditText"
        />
    <TextView
        android:id="@+id/resendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver a enviar código"
        android:textSize="15dp"
        android:textStyle=""
        android:layout_marginVertical="10dp"
        />


</LinearLayout>